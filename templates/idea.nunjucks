{% extends "layout.nunjucks" %}

{% block content %}
<div class="row">
  <div class="col s12">
    <div class="card ">
      <div class="card-content ">
        <span class="card-title">{{idea.title}}</span>
        <p>{{idea.content}}</p>
      </div>
      <div class="card-action">
        <a href="/vote/{{idea.id}}/true">Like</a>
        <a href="/vote/{{idea.id}}/false">Dislike</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}